<style>
    body {background-image: url(../image/pic3.jpg);
    background-position: center;
    font-family: 'Roboto', sans-serif; }

    header {
      padding: 30px;
      width: 100%;
      background-image: url(../image/pic5.jpg);
      background-position: center;
      font-family: 'Roboto', sans-serif;
    }
    #wrapper {
      width: 960px;
      margin-left: auto;
      margin-right: auto;
      padding-top: 5%;
    }
    #savedarticles {
      display: inline-block;
      overflow: auto;
      width: 60%;
      height: 700px;
    }
    #notes {
      float: right;
      width: 30%;
    }
    textarea, input {
      display: block;
      width: 100%;
      background-color: #ffffff;
      border: 1px solid grey;
    }
    input {
      height: 36px;
      font-size: 24px;
    }
    textarea {
      height: 200px;
      font-size: 18px;
    }
    p {
      background-color: #ffffff;
      padding : 10px;
      border : 1px solid grey;
    }
    #savenote{
      padding: 10px;
      font-size: 14px;
      width: 100%;
      background-color:#ccced1;
    }
    .btn{
      padding: 5px;
      margin : 5px;
      font-size: 14px;
      background-color:#ccced1;
    }
    .delbtn{
      padding: 5px;
      margin : 5px;
      font-size: 14px;
      background-color:#ccced1;
    }
    form{
        float: left;
    }
  </style>
<div id="wrapper">
<div id="savedarticles">
    {{#each savedArticle}}
        <br>
        <p>
        {{this.title}}<br>
        {{this.link}}
        </p>
        <button class='btn' btn-id='{{this._id}}'>Add Note</button>
        <form action="/remove/{{this._id}}" method="POST">
        <button class='delbtn' delbtn-id='{{this._id}}'>Remove from Saved</button><br>         
        </form>

    {{/each}}
</div>
<div id="notes"></div>
</div>
<script src="/app-saved.js" type="text/javascript"></script>